{
  "name": "@fajarnugraha37/metadrama",
  "version": "0.1.0",
  "description": "Metalama-style AOP + compile-time macros for Bun, Node, and Vite.",
  "license": "MIT",
  "type": "module",
  "module": "src/index.ts",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./cli": "./src/cli/index.ts",
    "./plugin": "./src/plugin/index.ts",
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "bin": {
    "metadrama": "src/cli/index.ts"
  },
  "scripts": {
    "dev": "bun run src/cli/index.ts playground --watch",
    "build": "bun run src/cli/index.ts build",
    "check": "bun run src/cli/index.ts check",
    "test": "vitest run && tsd",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "playground": "bun run src/cli/index.ts playground"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "peerDependencies": {
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@swc/core": "^1.15.1",
    "@types/estree": "^1.0.8",
    "fast-glob": "^3.3.3",
    "magic-string": "^0.30.21",
    "minimatch": "^10.1.1",
    "pathe": "^2.0.3",
    "picocolors": "^1.1.1",
    "@sinclair/typebox": "^0.34.41",
    "ts-patch": "^3.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/minimatch": "6.0.0",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "esbuild": "^0.24.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "tsd": "^0.33.0",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "vitest": "^4.0.8"
  }
}